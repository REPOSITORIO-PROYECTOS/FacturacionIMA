# Variables de Entorno para FacturacionIMA
# Copiar este archivo como .env y configurar los valores reales

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================
# Base de datos principal (MySQL)
DB_HOST=localhost
DB_USER=facturacion_user
DB_PASSWORD=tu_password_seguro
DB_NAME=facturacion_ima

# Base de datos alternativa (opcional, para migraciones)
NEW_DB_HOST=localhost
NEW_DB_USER=facturacion_user
NEW_DB_PASSWORD=tu_password_seguro
NEW_DB_NAME=facturacion_ima

# Usar base de datos nueva (1 = sí, 0 = no)
USE_NEW_DB=1

# ==========================================
# CONFIGURACIÓN DE GOOGLE SHEETS
# ==========================================
# ID de la hoja de cálculo de Google Sheets
GOOGLE_SHEET_ID=tu_google_sheet_id_aqui

# Ruta al archivo de credenciales de Google Service Account
GOOGLE_SERVICE_ACCOUNT_FILE=backend/credencial_IA.json

# ==========================================
# CONFIGURACIÓN DE AFIP
# ==========================================
# Habilitar credenciales AFIP desde variables de entorno (0 = usar bóveda encriptada)
AFIP_ENABLE_ENV_CREDS=0

# Credenciales AFIP (solo si AFIP_ENABLE_ENV_CREDS=1)
AFIP_CUIT=tu_cuit_afip
AFIP_CERT_PATH=ruta/al/certificado.crt
AFIP_KEY_PATH=ruta/a/la/clave.key

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================
# Clave secreta para JWT (generar una segura y única)
SECRET_KEY_SEGURIDAD=tu_clave_secreta_muy_segura_aqui

# Duración del token JWT en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ==========================================
# CONFIGURACIÓN DE SERVIDORES
# ==========================================
# Puerto del backend
BACKEND_PORT=8008

# Puerto del frontend
FRONTEND_PORT=3000

# URL del backend (para el frontend)
BACKEND_URL=http://127.0.0.1:8008

# ==========================================
# CONFIGURACIÓN DE USUARIO ADMIN ESTÁTICO
# ==========================================
# Credenciales del admin de respaldo (opcional)
STATIC_ADMIN_USER=admin
STATIC_ADMIN_PASS=admin123

# ==========================================
# CONFIGURACIÓN DE LOGS Y DEBUG
# ==========================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de logs del backend
BACKEND_LOG_FILE=backend/logs/facturacion.log

# ==========================================
# CONFIGURACIÓN DE GOOGLE SHEETS (REPORTES)
# ==========================================
# Nombre de la hoja para boletas
SHEET_BOLETAS=Boletas

# Nombre de la hoja para comprobantes
SHEET_COMPROBANTES=Comprobantes

# ==========================================
# CONFIGURACIÓN DE CORREO (OPCIONAL)
# ==========================================
# SMTP para envío de emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password

# ==========================================
# CONFIGURACIÓN DE BACKUPS
# ==========================================
# Directorio para backups automáticos
BACKUP_DIR=backups/

# Frecuencia de backup (diaria, semanal)
BACKUP_FREQUENCY=diaria